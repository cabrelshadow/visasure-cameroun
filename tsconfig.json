{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // Assure-toi que ce chemin correspond à l'emplacement de ton fichier de déclaration
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
